CREATE TABLE PATIENT (
    regid INT PRIMARY KEY GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
    FIRSTNAME VARCHAR(50),
    LASTNAME VARCHAR(50),
    EMAIL VARCHAR(100),
    ROOMNUMBER INT,
    WEIGHT INT,
    HEIGHT INT,
    AGE INT,
    BLOODGROUP VARCHAR(10),
    DOB VARCHAR(20), -- Storing date as VARCHAR
    GENDER VARCHAR(10),
    CITY VARCHAR(50),
    DOCTORID BIGINT,
    DOCTORNAME VARCHAR(100),
    ADDRESS VARCHAR(255),
    CONTACT BIGINT
);




